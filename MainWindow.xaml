<Window x:Class="AllMe.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="AllMeBtw9000" Icon="nuts.ico" MinWidth="500" MinHeight="300" Height="269" Width="443">

    <Grid Margin="0,0,26,11">


        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>

            <RowDefinition Height="Auto"/>

            <RowDefinition Height="106*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="154*"/>

        </Grid.RowDefinitions>


        <Label Content="Enter replies:" Margin="10,0,10,80" Grid.RowSpan="3"/>

        <TextBox x:Name="txtInput" Margin="10,5,10,0" Grid.Row="2" AcceptsReturn="True" Height="114" VerticalAlignment="Top"/>

        <Button Content="ALL ME" Margin="10,11,10,0" Grid.Row="3" Click="Button_Click" RenderTransformOrigin="0.51,-0.487" Height="38" VerticalAlignment="Top"/>

        <TextBox x:Name="txtOutput" Margin="10,10,10,10" Grid.Row="4" AcceptsReturn="True" IsReadOnly="True"/>

    </Grid>

</Window>
